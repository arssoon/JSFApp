<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "pl.example.JSFApplication.entity.Employee" table = "EMPLOYEE">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "id" column = "prac_id" type = "int" >
            <generator class="native"/>
        </id>

        <property name = "name" column = "prac_imie" type = "string"/>
        <property name = "surname" column = "prac_nazwisko" type = "string"/>
        <property name = "age" column = "prac_wiek" type = "int"/>
        <property name = "nrPhone" column = "prac_nr_telefonu" type = "string"/>
        <property name = "email" column = "prac_email" type = "string"/>

    </class>
</hibernate-mapping>